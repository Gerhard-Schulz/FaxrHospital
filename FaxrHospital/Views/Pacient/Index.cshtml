@model IEnumerable<Pacient>

@{
    ViewData["Title"] = "Фахриева Айгуль Айдаровна";
}

<div class="row justify-content-end w-100 mt-4">
    <div class="col-6">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    <strong class="w-100 pb-1" style="font-size: 1.1rem">Поиск:</strong>
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="w-50 border-info" />
                    <button type="submit" class="btn btn-info w-25">Искать</button>
                </p>
            </div>
        </form>
    </div>
</div>
<h2 class="text-center text-primary">Пациенты</h2>
<table class="table table-sm table-hover w-100 mt-3 pb-2 cell-centered">
    <thead class="table-info">
        <tr>
            <th></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="link link-primary page-link">ФИО</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["SexSortParm"]" class="link link-primary page-link">Пол</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["PassportSortParm"]" class="link link-primary page-link">Пасспорт</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["PhoneSortParm"]" class="link link-primary page-link">Номер телефона</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["BirthSortParm"]" class="link link-primary page-link">Дата рождения</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["AdressSortParm"]" class="link link-primary page-link">Адрес</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pacient in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Pacient" asp-action="Edit" asp-route-id="@pacient.Id" class="btn btn-outline-warning w-100">Редактировать</a>
                </td>
                <td>
                    @pacient.Name
                </td>
                <td>
                    @pacient.Sex
                </td>
                <td>
                    @pacient.Passport
                </td>
                <td>
                    @pacient.Phone
                </td>
                <td>
                    @pacient.Birthday.ToString("d")
                </td>
                <td>
                    @pacient.Adress
                </td>
                <td>
                    <a asp-controller="Pacient" asp-action="Delete" asp-route-id="@pacient.Id" class="btn btn-outline-danger w-100">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>