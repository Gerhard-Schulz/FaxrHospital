@model Doctor

@{
    ViewData["Title"] = "Добавление";
}

<div class="d-flex justify-content-md-start">
    <div class="card text-white bg-info mb-3">
        <div class="card-header">Новый доктор</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="p-1" for="floatingInput" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="p-1" for="floatingInput" asp-for="Speciality"></label>
                    <input asp-for="Speciality" class="form-control" />
                    <span asp-validation-for="Speciality" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="p-1" for="floatingInput" asp-for="Qualification"></label>
                    <input asp-for="Qualification" class="form-control" />
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="p-1" asp-for="OtdelenieId"></label>
                    <select asp-for="OtdelenieId" asp-items="ViewBag.OtdelenieList" class="form-select">
                        <option selected disabled></option>
                    </select>
                    <span asp-validation-for="OtdelenieId" class="text-danger"></span>
                </div>
                <div class="btn-group" role="group">
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-dark w-100">Вернуться</a>
                    <button type="submit" class="btn btn-success w-100">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}